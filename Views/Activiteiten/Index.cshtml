                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max_inschrijvingen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ontmoetingsplaats.Plaatsnaam)
