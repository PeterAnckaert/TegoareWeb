@model PaginatedList<TegoareWeb.Models.Activiteit>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Zoeken naar: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            <input type="submit" value="Search" class="btn btn-info" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<partial name="_NavigatorPaginatedList" model="Model"/>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NaamSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Naam</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OmschrijvingSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Omschrijving</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PublicatiedatumSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Publicatiedatum</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["InschrijfdatumSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Uiterste_inschrijfdatum</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PrijsSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Prijs</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MaxInschrijvingSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Max_inschrijvingen</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OntmoetingsplaatsSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Ontmoetingsplaats</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Omschrijving)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publicatiedatum.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uiterste_inschrijfdatum.Datum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prijs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Max_inschrijvingen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ontmoetingsplaats.Plaatsnaam)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    ViewData["FooterPaginatedList"] = true;
}
<partial name="_NavigatorPaginatedList" model="Model"/>