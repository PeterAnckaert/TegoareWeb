@using TegoareWeb.Models
@using TegoareWeb.Data
@using TegoareWeb.ViewModels

@model Lid

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Lid</h4>
<hr />
<div class="row">
    <div class="col-md-11">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Achternaam" class="control-label">@Html.DisplayNameFor(Model => Model.Achternaam):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Achternaam" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Voornaam" class="control-label">@Html.DisplayNameFor(Model => Model.Voornaam):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Voornaam" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Straatnaam" class="control-label">@Html.DisplayNameFor(Model => Model.Straatnaam):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Straatnaam" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Straatnummer" class="control-label">@Html.DisplayNameFor(Model => Model.Straatnummer):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Straatnummer" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Postcode" class="control-label">@Html.DisplayNameFor(Model => Model.Postcode):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Postcode" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Gemeente" class="control-label">@Html.DisplayNameFor(Model => Model.Gemeente):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Gemeente" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Telefoon_vast" class="control-label">@Html.DisplayNameFor(Model => Model.Telefoon_vast):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Telefoon_vast" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Telefoon_GSM" class="control-label">@Html.DisplayNameFor(Model => Model.Telefoon_GSM):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Telefoon_GSM" class="form-control" />
                </div>
            </div>
            <div class="row">
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Email" class="control-label">@Html.DisplayNameFor(Model => Model.Email):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 font-weight-bold text-lg-right text-md-left pr-1">
                    <label asp-for="Geboortedatum" class="control-label">@Html.DisplayNameFor(Model => Model.Geboortedatum):</label>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12 mb-2 pl-0">
                    <input asp-for="Geboortedatum" class="form-control" />
                </div>
            </div>
            <div class="font-weight-bold">
                <div>
                    <span asp-validation-for="Achternaam" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Voornaam" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Straatnaam" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Straatnummer" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Postcode" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Gemeente" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Telefoon_vast" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Telefoon_GSM" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div>
                    <span asp-validation-for="Geboortedatum" class="text-danger"></span>
                </div>
            </div>
            @{
                var relaties = Model.Relaties.Where(r => r.Id_Lid1 == Model.Id || r.Id_Lid2 == Model.Id);
            }
            @if (relaties.Count() > 0)
            {
                <hr />
                <div class="font-weight-bold mb-3">
                    AANTAL RELATIES: @relaties.Count() (klik op het kruisje naast de relatie om die te verwijderen)
                </div>
                <div>
                    <partial name="_ListRelaties" model="new LijstRelatieLid { LidId = Model.Id, Relaties = relaties, Knop = true }" />
                </div>
            }
            <div class="form-group">
                <button class="btn btn-block btn-knop btn-save" type="submit">
                    <i class="fa fa-save"></i> Bewaar aanpassingen
                </button>
            </div>
        </form>
        <partial name="_GoTo" model="new KnopInfo()" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
