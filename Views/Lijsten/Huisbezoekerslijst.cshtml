@model TegoareWeb.ViewModels.Huisbezoekerslijst

@{
    ViewData["Title"] = "Huisbezoekerslijst";
}

<h1>LIJST MET HUISBEZOEKERS</h1>
<h4>Klik op de huisbezoeker waarvan je de lijst met zijn/haar leden wilt zien</h4>
<hr />
@foreach (var huisbezoeker in Model.HuisbezoekersList)
{
    <div class="col-sm-6 col-md-4 col-lg-3 float-left">
        <form asp-action="LedenHuisbezoekerlijst">
            <div class="card border-0 btn">
                <input type="submit" value="@huisbezoeker.Key" class="card-title huisbezoeker-card-title" />
                <input type="hidden" asp-for="IdHuisbezoeker" value="@huisbezoeker.Value" />
            </div>
        </form>
    </div>
}


