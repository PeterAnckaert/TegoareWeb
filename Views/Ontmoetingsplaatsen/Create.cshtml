@using TegoareWeb.Models

@model Ontmoetingsplaats

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ontmoetingsplaats</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Plaatsnaam" class="control-label"></label>
                <input asp-for="Plaatsnaam" class="form-control" />
                <span asp-validation-for="Plaatsnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Straatnaam" class="control-label"></label>
                <input asp-for="Straatnaam" class="form-control" />
                <span asp-validation-for="Straatnaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Straatnummer" class="control-label"></label>
                <input asp-for="Straatnummer" class="form-control" />
                <span asp-validation-for="Straatnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" value="8900" class="form-control" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gemeente" class="control-label"></label>
                <input asp-for="Gemeente" value="Ieper" class="form-control" />
                <span asp-validation-for="Gemeente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block btn-knop" />
            </div>
            @{var goTo = new TegoareWeb.Data.KnopInfo { Label = "Terug naar lijst" }; }
            <partial name="_GoTo" model="goTo" />

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
