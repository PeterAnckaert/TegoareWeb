@using TegoareWeb.Models

@model Relatie

@{ ViewData["Title"] = "Verwijderen van een relatie"; }

<h1>Verwijderen</h1>

<h3>Ben je zeker dat je deze relatie wilt verwijderen ?</h3>
<h4>Dit kan niet ongedaan gemaakt worden !</h4>
<hr />
<div>
    <h4>Relatie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lid1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lid1.VolledigeNaam)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Groep)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Groep.Rol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lid2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lid2.VolledigeNaam)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
